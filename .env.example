# ===== 核心配置 =====
NODE_ENV=production
PORT=3000

# ===== 重要密钥 (必须修改!) =====
# 生成方式: openssl rand -hex 32
HANDY_MASTER_SECRET=

# ===== 数据库 =====
# 生成密码: openssl rand -base64 24
POSTGRES_PASSWORD=
DATABASE_URL=postgresql://postgres:YOUR_POSTGRES_PASSWORD@postgres:5432/handy

# ===== Redis =====
REDIS_URL=redis://redis:6379

# ===== S3/MinIO =====
S3_HOST=minio
S3_PORT=9000
S3_USE_SSL=false
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=happy
# 改成你的服务器公网地址或域名
S3_PUBLIC_URL=http://YOUR_SERVER_IP:9000/happy

# ===== 监控 =====
METRICS_ENABLED=true
METRICS_PORT=9090

# ===== 可选: GitHub App =====
# GITHUB_APP_ID=
# GITHUB_PRIVATE_KEY=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GITHUB_REDIRECT_URI=
# GITHUB_WEBHOOK_SECRET=

